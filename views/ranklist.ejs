<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <title>PandaFeed | User Ratings</title>
    </head>
    <body>
        <section class="container">
            <h1>Ranklist</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Rating</th>
                    </tr>
                </thead>
                <tbody>
                    <% ranklist.forEach(function(user_rating, index) { %>
                    <tr>
                        <td><%= index + 1%></td>
                        <td><%= user_rating.name %></td>
                        <td><%= user_rating.rating %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <a class="btn btn-default" href="/chat" role="button">To Chat</a>
        </section>
    </body>
</html>
